<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="coffeespace.com.br.periciasis.Activitys.ExamesActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbmsgtopo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnovoobjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inserir" />

        <Spinner
            android:id="@+id/spinnerobjetos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbinserirconstatacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toque nos objetos para realizar as constatações " />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">


        <RadioGroup
            android:id="@+id/rdgroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rddano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Dano" />

            <RadioButton
                android:id="@+id/rdipaf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ipaf" />
            <RadioButton
                android:id="@+id/rdmorte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morte" />

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ListView
            android:id="@+id/lvobjetos"
            android:layout_width="274dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>



</LinearLayout>
    </ScrollView>
