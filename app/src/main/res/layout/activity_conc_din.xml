<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="coffeespace.com.br.periciasis.Activitys.ConcDinActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/lbdinamica"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="Dinâmica"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editdinamica"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:elevation="1dp"
                android:ems="10"
                android:gravity="top"
                android:hint="(Livre)"
                android:inputType="text|textMultiLine"

                android:scrollbars="vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/lbconclusao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Conclusão"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editconclusao"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:ems="10"
                android:gravity="top"
                android:hint="(texto livre, cuidado com o português)Ofereceu interesse à Perícia o quarto tal tal, bla bla bla que já sabemos."
                android:inputType="text|textMultiLine"
                android:scrollHorizontally="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editnaopreservado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="top"
                android:hint="Descreva a causa da não preservação"
                android:inputType="text|textMultiLine"
                android:scrollHorizontally="true"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/btinserirdinamicaeconclusao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Constatar" />

            <Button
                android:id="@+id/btsairdinamicaeconclusao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btdinamicadinamico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abrir Modo dinâmico" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
